        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:background="@mipmap/barrehaut"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:background="@mipmap/barrebas"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:id="@+id/imageButton2"
        android:background="@mipmap/regles"
        android:layout_alignWithParentIfMissing="true"
        android:layout_marginLeft="10dip"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dip" />

    <Button
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:id="@+id/btnTirer"
        android:layout_marginBottom="50dp"
        android:background="@mipmap/tirer"
        android:layout_alignBottom="@+id/btnRester"
        android:layout_alignStart="@+id/btnRester" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="$ 600"
        android:id="@+id/lblTresorerie"
        android:textColor="#ffc000"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textIsSelectable="false"
        android:layout_alignBottom="@+id/imageButton2"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="70dip"
        android:layout_height="70dip"
        android:id="@+id/btnRester"
        android:background="@mipmap/rester"
