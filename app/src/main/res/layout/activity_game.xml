    <ImageView
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:id="@+id/jeton25"
        android:background="@mipmap/j25"
        android:layout_marginStart="0dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/cartejoueur1" />

    <ImageView
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:id="@+id/jeton100"
        android:background="@mipmap/j100"
        android:layout_marginStart="0dp"
        android:layout_alignTop="@+id/jeton25"
        android:layout_toEndOf="@+id/cartejoueur3" />

    <ImageView
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:id="@+id/jeton500"
        android:background="@mipmap/j500"
